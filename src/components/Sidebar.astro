---

export interface Props {
    activeLink: string;
}

const { activeLink } = Astro.props as Props;

const linkClass = function(page: string): string {
    const activeLinkClass = page === activeLink ? 'text-white' : 'text-main-dark';
    return "uppercase text-xl xl:text-lg text-center hover:bg-white hover:rounded-lg hover:bg-opacity-25 p-4 xl:p-2 2xl:p-4 " + activeLinkClass;
}
